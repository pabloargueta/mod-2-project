<h1>Neighborhood News:</h1>
<table>
  <tr>
    <th>Profile Picture</th>
    <th>Neighbor</th>
    <th>Date Posted</th>
    <th>Post</th>
  </tr>
  
  <% @posts.each do |post| %>
    <tr>
      <td>  <%= image_tag(post.user.profile_picture, size: "50x50") %></td>
      <td><%= link_to post.user.full_name, post.user %></td>
      <td> <%= post.formatted_created_date %></td>
      <td><%= post.text %></td>
    </tr>
  <% end %>
</table>