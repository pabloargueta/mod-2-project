<h1>all users page</h1>

<% if @users %>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.full_name, user %></li>
      <% #note: bug here - current_user will always be admin, need to change user path logic to show actual peron's name not current user on user's show.html.erb %>
      
    <% end %>
  </ul>

<% else %>
  <%= form_tag 'all_users', :method => :get, :class => 'form-search' do %>
    <div class="input-append">
    <%= collection_select :homeowners_association, :id, HomeownersAssociation.all, :id, :name %>
    <button type="submit" class="btn">Search</button>
    </div>
  <% end %>
<% end %>
